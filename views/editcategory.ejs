<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <title>Create Category</title>
</head>
<body>
    <div class="create-category">
        <%- include('partials/navbar') %>
        <form action="/categories/edit/<%= id%>" method="post">
            <h2>Edit the category</h2>
            <div class="input">
                <label for="category">Name</label>
                <input type="text" 
                id="category" 
                name="name" 
                value="<%= cate%>">
                <%errors.forEach(error => {%>
                    <p class="err"><%= error.msg %></p>
                <%})%>
            </div>
            <div class="buttons">
                <button type="submit">Update catergory</button>
                <button><a href="/categories">Cancel</a></button>
            </div>
        </form>
    </div>
    
</body>
</html>